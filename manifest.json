{
  "manifest_version": 3,
  "name": "IG to Airtable CRM",
  "version": "1.0",
  "description": "Capture Instagram profile info and send to Airtable CRM.",
  "permissions": [
    "sidePanel",
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Open IG CRM Side Panel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}